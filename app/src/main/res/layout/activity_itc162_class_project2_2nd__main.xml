<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.phhagens.sumcalculator_itc162_classproject2.itc162_classProject2_2nd_MainActivity">

    <TextView
        android:id="@+id/resultLabel"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="91dp"
        android:text="@string/result"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/resultContainer"
        app:layout_constraintEnd_toStartOf="@+id/resultContainer"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/resultContainer"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_marginEnd="95dp"
        android:layout_marginTop="58dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resultLabel"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0" />
</android.support.constraint.ConstraintLayout>
